{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "target": "es2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "./dist",
    "noEmitOnError": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "incremental": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["./api/*"],
      "@cache/*": ["./cache/*"],
      "@config/*": ["./config/*"],
      "@exceptions": ["./exceptions"],
      "@libs/*": ["./libs/*"],
      "@utils/*": ["./utils/*"],
      "@validate/*": ["./validate/*"]
    },
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules", "./test", "./dist", "./prisma"],
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}